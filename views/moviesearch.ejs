<%- include("partials/header.ejs") %>

<div class="container py-5">
  <h2 class="section-title">Movie Search Results</h2>

  <% if (movies.length === 0) { %>
  <div class="alert alert-info text-center p-4">
    <i class="fa-solid fa-circle-info fa-2x mb-3"></i>
    <h4>No results found</h4>
    <p class="mb-4">
      We couldn't find any movies matching your search. Please check your
      spelling and try again.
    </p>
    <a href="/" class="btn btn-primary">
      <i class="fa-solid fa-arrow-left me-2"></i>Back to Home
    </a>
  </div>
  <% } else { %>
  <div class="search-results-container">
    <div class="list-group">
      <% movies.forEach(movie => { %>
      <a
        href="/movie/<%= movie.id %>"
        class="list-group-item list-group-item-action d-flex align-items-center p-3"
      >
        <i class="fa-solid fa-film me-3 text-primary"></i>
        <div>
          <h5 class="mb-1"><%= movie.title %></h5>
          <small class="text-muted"
            ><%= movie.year ? movie.year.substring(0, 4) : 'N/A' %></small
          >
        </div>
      </a>
      <% }) %>
    </div>

    <div class="mt-4">
      <a href="/" class="btn btn-primary">
        <i class="fa-solid fa-arrow-left me-2"></i>Back to Home
      </a>
    </div>
  </div>
  <% } %>
</div>

<%- include("partials/footer.ejs") %>
