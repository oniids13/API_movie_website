<%- include("partials/header.ejs") %>

<section class="hero-section">
  <div class="container text-center">
    <h1 class="hero-title">Explore Movies</h1>
    <p class="hero-text">
      Discover top-rated and trending movies from around the world.
    </p>
  </div>
</section>

<div class="container">
  <section class="top-rated mt-5">
    <h2 class="section-title">Top Rated Movies</h2>
    <div class="media-grid">
      <% movies.forEach(movie => { %>
      <div class="media-card">
        <a href="/movie/<%= movie.id %>">
          <img
            src="<%= movie.poster %>"
            class="media-poster"
            alt="<%= movie.title %>"
          />
          <div class="media-body">
            <h5 class="media-title"><%= movie.title %></h5>
            <div class="media-year"><%= movie.year %></div>
          </div>
        </a>
      </div>
      <% }); %>
    </div>
  </section>

  <section class="trending mt-5">
    <h2 class="section-title">Trending Movies</h2>
    <div class="media-grid">
      <% trend.forEach(movie => { %>
      <div class="media-card">
        <a href="/movie/<%= movie.id %>">
          <img
            src="<%= movie.poster %>"
            class="media-poster"
            alt="<%= movie.title %>"
          />
          <div class="media-body">
            <h5 class="media-title"><%= movie.title %></h5>
            <div class="media-year"><%= movie.year %></div>
          </div>
        </a>
      </div>
      <% }); %>
    </div>
  </section>
</div>

<%- include("partials/footer.ejs") %>
