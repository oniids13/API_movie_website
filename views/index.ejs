<%- include("partials/header.ejs") %>

<div class="container">
    <div class="row">
        <div class="col-xl-6 col-sm-9 my-5">
            <h2 class="text-center">Looking for a Movie?</h2>
            <form action="/movie-search" method="post">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" name="movieSearch">
                    <label for="floatingInput">Search Movie</label>
                  </div>
                  <div class="d-flex justify-content-center">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>
        </div>
        <div class="col-xl-6 col-sm-9 my-5">
            <h2 class="text-center">Looking for a Tv Show?</h2>
            <form action="/tv-search" method="post">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" name="tvSearch">
                    <label for="floatingInput">Search TV show</label>
                  </div>
                  <div class="d-flex justify-content-center">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>
        </div>
    </div>
</div>


<div>
   

    <div class="text-center my-3 border-bottom border-top">
        <h1>Popular Movies</h1>
    </div>
    <div class="main-cards">
        <% topMovie.forEach(movie => { %>
            <div class="card" style="width: 18rem;">
                <a href="/movie/<%= movie.id %>"><img src="<%= movie.moviePoster%>" class="card-img-top" alt="<%= movie.title %>"></a>
                <div class="card-body">
                  <h5 class="card-title"><%= movie.title %></h5>
                  <span><%= movie.year %></span>
                </div>
              </div>
        <%});%> 
    </div>

    <div class="text-center my-3 border-bottom border-top">
        <h1>Popular TV shows</h1>
    </div>
    <div class="main-cards">
        <% topTv.forEach(tv => { %>
            <div class="card" style="width: 18rem;">
                <a href="/tv/<%= tv.id %>"><img src="<%= tv.tvPoster%>" class="card-img-top" alt="<%= tv.title %>"></a>
                <div class="card-body">
                    <h5 class="card-title"><%= tv.title %></h5>
                    <span><%= tv.year %></span>
                </div>
                </div>
        <%});%> 
    </div>
    
</div>

<%- include("partials/footer.ejs") %>