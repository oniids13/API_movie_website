<%- include("partials/header.ejs") %>

<div>
  <div class="row mx-5">
    <div class="col-4 mt-5">
      <h1><%= movie.title %></h1>
      <p><%= movie.year %></p>
      <p><%= movie.genre %></p>
      <p><strong>Run time:</strong> <%= movie.runtime %></p>
      <p>Popularity: <%= movie.popularity %></p>
      <p><%= movie.description %></p>
      <a href="/movies"><button class="btn btn-primary">Back</button></a>
    </div>
    <div class="col-8 d-flex justify-content-center mt-5">
      <img class="pic" src="<%= movie.imgUrl %>" alt="<%= movie.title %>" />
    </div>
  </div>
</div>

<%- include("partials/footer.ejs") %>
